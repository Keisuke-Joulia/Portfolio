{% extends 'base.html.twig' %}
{% block title %}Mes Projets{% endblock %}

{% block body %}

<div class="container m-3">
    <h1>Mes Projets réalisés</h1>
</div>
<div class="row justify-content-center">
    {% for project in projects %}
    <div class="col-auto mb-4">
        <div class="card text-center text-white bg-dark" style="width: 20rem; height: 40rem">
            <div class="card-header">{{ project.title }}</div>
            <a href="projet/{{ project.slug }}" style="min-height: 30%; max-height: 30%">
                <img src="{{project.illustration}}" class="card-img-top" alt="{{ project.title }} illustration" style="min-height: 100%; max-height: 100%">
            </a>
            <div class="card-body overflow-auto">
                <p class="card-text">{{ project.pitch }}</p>
                <p class="card-text" id="subtitle">Description : {{ project.description|raw }}</p>
                <p class="card-text" id="subtitle">Date de réalisation : {{ project.createdAt|date('d/m/Y') }}</p>
                <p class="card-text" id="subtitle">Technologies :
                    {% for techno in project.technos %}
                    {{ techno.name }}
                    {% endfor %}
                </p>
            </div>
            <div class="card-footer">
                <a href="{{ project.websiteLink }}" class="btn btn-outline-info" target="_blank" style="max-width: 18rem">{{ project.websiteLink }}</a>
            </div>
        </div>
    </div>
    {% else %}
    Aucun projet trouvée.
    {% endfor %}
</div>
</div>
{% endblock %}