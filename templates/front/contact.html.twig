{% extends 'base.html.twig' %}

{% block title %} Contactez-moi!{% endblock %}

{% block body %}

<div class="container">
    <h1 class="text-center m-3">Contact</h1>

    {{form_start(form)}}
    <div class="row mb-3">
        <div class="col-lg-6">
            {{form_label(form.firstName)}}
            {{form_widget(form.firstName)}}
        </div>
        <div class="col-lg-6">
            {{form_label(form.lastName)}}
            {{form_widget(form.lastName)}}
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-lg-6">
            {{form_label(form.email)}}
            {{form_widget(form.email)}}
        </div>
        <div class="col-lg-6">
            {{form_label(form.subject)}}
            {{form_widget(form.subject)}}
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-lg-12">
            {{form_label(form.message)}}
            {{form_widget(form.message, { 'attr' : {'rows' : 10 }} ) }}
        </div>
    </div>
    <div class=" d-flex justify-content-center mt-3">
        <div class="g-recaptcha" data-sitekey="6Lc5KbIbAAAAAKaCKR60sTVUmWm1QVym-3HwF_0k"></div>
        <br />
    </div>
    <div class="d-flex justify-content-center mt-3">
        <input class="btn btn-outline-info" type="submit" value="Contact">
    </div>
    {{form_end(form)}}
</div>
{% endblock %}